                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <Grid Margin="10,10,0,2"
                                  VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="30" />
