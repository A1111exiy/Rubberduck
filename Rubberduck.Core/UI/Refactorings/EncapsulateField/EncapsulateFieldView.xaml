            </TextBlock>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Margin="5,8,0,0"
                     Height="22"
                     VerticalAlignment="Top"
                     VerticalContentAlignment="Center"
                     Text="{Binding EncapsulateAsUDT_FieldName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
