                                <Grid Visibility="Collapsed">
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Margin="30,10,0,20">
                            User Defined Type Field Name:
                                    </TextBlock>
                                    <TextBox Grid.Row="1"
                                             Grid.Column="1"
                                             Margin="5,8,0,0"
                                             Height="22"
                                             VerticalAlignment="Top"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding EncapsulateAsUDT_FieldName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Grid>
                            <Grid Margin="5,0,0,10">
                                <Grid MaxHeight="150">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition MinWidth="100"
                                                          MaxWidth="600" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>
                                    <ListBox Grid.Column="0"
                                             Name="FieldListX"
                                             SelectedItem="{Binding SelectedValue, Mode=TwoWay}"
                                             ItemsSource="{Binding EncapsulationFields}"
                                             SelectionMode="Single"
                                             Height="auto"
                                             VerticalAlignment="Top"
                                             Margin="5,0,0,5">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Content="{Binding TargetID}"
                                                              IsChecked="{Binding EncapsulateFlag}"
                                                              FontWeight="Bold"
                                                              Command="{Binding Path=DataContext.EncapsulateFlagCommand, 
                                                                RelativeSource={RelativeSource AncestorType=ListBox}}" />
                                                    <TextBlock Name="PropertyNameTextBlock"
                                                               Grid.Column="1"
                                                               Text="{Binding FieldDescriptor}"
                                                               Margin="5,0,0,0">
                                                    </TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <StackPanel Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Margin="5,0,0,0"
                                                MinWidth="100">
                                        <Button Content="Select All"
                                                Height="20"
                                                Margin="0,0,0,5"
                                                Padding="10,0"
                                                Command="{Binding SelectAllCommand}" />
                                        <Button Content="Deselect All"
                                                Height="20"
                                                Margin="0"
                                                Padding="10,0"
                                                Command="{Binding DeselectAllCommand}">
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="100"
                                                      MaxWidth="600" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <GroupBox Grid.Column="0"
                                          Margin="5,0,0,5"
                                          MaxHeight="200"
                                          MinHeight="100"
                                          BorderThickness="2">
                                    <GroupBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding EncapsulateFlag}"
                                                      Margin="2,0,2,0"
                                                      FontWeight="Bold" />
                                            <TextBlock Name="tbSelectedName"
                                                       FontWeight="Bold" />
                                        </StackPanel>
                                    </GroupBox.Header>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="10,5,0,0">
                                            <TextBlock Margin="0,0,0,2"
                                                       FontWeight="Bold">Property Name:</TextBlock>
                                            <CheckBox IsChecked="{Binding IsReadOnly}"
                                                      Content="Read Only"
                                                      Margin="200,0,5,2"
                                                      FontWeight="Bold"
                                                      HorizontalAlignment="Right" />
                                        </StackPanel>
                                        <TextBox Name="tbPropertyName"
                                                 Margin="10,0,50,0"
                                                 Height="22"
                                                 Text="{Binding PropertyName}" />
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                            <Grid Margin="5,0">
                                <!--<TextBlock Text="Preview Goes Here!!!" />-->
                                <controls:BindableTextEditor Margin="10,10,10,10"
                                         FontFamily="Courier New "
                                         ShowLineNumbers="False"
                                         HorizontalScrollBarVisibility="Auto"
                                         VerticalScrollBarVisibility="Auto"
                                        Height="200"
                                         IsReadOnly="True"
                                         Text="{Binding PropertyPreview,Mode=OneWay}" />
                            </Grid>
                            <!--<Grid><controls:BindableTextEditor Margin="10,10,10,10"
                                         FontFamily="Courier New "
                                         ShowLineNumbers="False"
                                         HorizontalScrollBarVisibility="Auto"
                                         VerticalScrollBarVisibility="Auto"
                                         MinHeight="200"
                                         IsReadOnly="True"
                                         Text="{Binding PropertyPreview,Mode=OneWay}" />
        </Grid>-->
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <!--<Grid Grid.Row="4"
              Margin="5,0">
