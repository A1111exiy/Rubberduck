<UserControl x:Class="Rubberduck.UI.UnitTesting.TestExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:unitTesting="clr-namespace:Rubberduck.UI.UnitTesting"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600" d:DataContext="{d:DesignInstance unitTesting:TestExplorerViewModel }">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ToolBar Grid.Row="0">

            <Button Command="{Binding RefreshCommand}">
                <Image Height="16" Source="../../Resources/arrow-circle-double.png" />
            </Button>

            <Separator />

            <Menu>
                <MenuItem VerticalAlignment="Center" Header="Run">
                    <MenuItem.Icon>
                        <Image Height="16" Source="../../Resources/control.png"></Image>
                    </MenuItem.Icon>
                    <MenuItem Header="All tests" Command="{Binding RunAllTestsCommand}">
                        <MenuItem.Icon>
                            <Image Height="16" Source="../../Resources/flask--arrow.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Run new tests" Command="{Binding RunNotExecutedTestsCommand}">
                        <MenuItem.Icon>
                            <Image Height="16" Source="../../Resources/question-white.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Run passed tests" Command="{Binding RunPassedTestsCommand}">
                        <MenuItem.Icon>
                            <Image Height="16" Source="../../Resources/tick-circle.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Run failed tests" Command="{Binding RunFailedTestsCommand}">
                        <MenuItem.Icon>
                            <Image Height="16" Source="../../Resources/cross-circle.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Repeat last run" Command="{Binding RepeatLastRunCommand}">
                        <MenuItem.Icon>
                            <Image Height="16" Source="../../Resources/arrow-repeat.png" />
                        </MenuItem.Icon>
                    </MenuItem>

                </MenuItem>
                <MenuItem VerticalAlignment="Center" Header="Add">
                    <MenuItem.Icon>
                        <Image Height="16" Source="../../Resources/flask--plus.png" />
                    </MenuItem.Icon>
                    <MenuItem Command="{Binding AddTestModuleCommand}" Header="Test Module">
                    </MenuItem>
                    <Separator />
                    <MenuItem Command="{Binding AddTestMethodCommand}" Header="Test Method">
                        <MenuItem.Icon>
                            <Image Height="16" Source="../../Resources/flask.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Command="{Binding AddErrorTestMethodCommand}" Header="Test Method (expected error)">
                        <MenuItem.Icon>
                            <Image Height="16" Source="../../Resources/flask--exclamation.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <Separator />
            <ProgressBar Height="16" Width="100" Foreground="#FF06B025" Value="100" />
            <Label Content="0 ms" />
            <Label Content="0 passed" />
            <Label Content="0 failed" />
            <Label Content="0 inconclusive" />

            <Separator />

            <Button Command="{Binding ExportResultsCommand}">
                <Image Height="16" Source="../../Resources/disk.png" />
            </Button>
            
        </ToolBar>
        
        <TreeView Grid.Row="1">
            <!-- todo: define hierarchical data template -->
        </TreeView>
    </Grid>
</UserControl>
