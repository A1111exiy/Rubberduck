<Page x:Class="Rubberduck.UI.Settings.GeneralSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:Rubberduck.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Image Source="../../Resources/Rubberduck.png" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill" MaxWidth="536" />
            <ComboBox Width="210" HorizontalAlignment="Left" Margin="15, 10" SelectedIndex="0">
                <TextBlock Text="{x:Static resx:RubberduckUI.Language_EN}" />
                <TextBlock Text="{x:Static resx:RubberduckUI.Language_FR}" />
                <TextBlock Text="{x:Static resx:RubberduckUI.Language_DE}" />
                <TextBlock Text="{x:Static resx:RubberduckUI.Language_SV}" />
                <TextBlock Text="{x:Static resx:RubberduckUI.Language_JA}" />
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
